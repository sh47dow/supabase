{
  "name": "supabase-monorepo",
  "private": true,
  "description": "Supabase Monorepo",
  "repository": "https://github.com/supabase/monorepo",
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/bulma",
      "**/bulma/**"
    ]
  },
  "engines": {
    "node": ">=10.13.0",
    "yarn": "1.x"
  },
  "scripts": {
    "build": "yarn run build:web",
    "build:web": "yarn workspace @supabase/web build",
    "deploy:web": "yarn workspace @supabase/web deploy",
    "deploy:realtime-js": "yarn workspace @supabase/realtime-js deploy",
    "dev": "concurrently --kill-others-on-fail \"yarn dev:web\" ",
    "dev:web": "yarn workspace @supabase/web dev",
    "test:pg-admin-js": "yarn workspace @supabase/pg-admin-js test",
    "test:realtime-js": "yarn workspace @supabase/realtime-js test"
  },
  "dependencies": {
    "concurrently": "^5.0.0"
  },
  "devDependencies": {
    "now": "^16.3.1",
    "prettier": "^1.18.2",
    "esm": "3.2.25",
    "jsdoc-test": "0.0.10",
    "mocha": "6.2.2"
  }
}
